/* pages/category/category.wxss */
page {
  height: 100%;
}
.category .category_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.category .category_container .left_scroll {
  flex: 2;
}
.category .category_container .left_scroll .left_scroll_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.category .category_container .left_scroll .active {
  color: var(--zhuticolor);
  border-left: 5rpx solid currentColor;
}
.category .category_container .right_scrioll {
  flex: 5;
}
.category .category_container .right_scrioll .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.category .category_container .right_scrioll .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.category .category_container .right_scrioll .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.category .category_container .right_scrioll .goods_group .goods_list navigator {
  width: 23vw;
  text-align: center;
}
.category .category_container .right_scrioll .goods_group .goods_list navigator image {
  width: 50%;
}
