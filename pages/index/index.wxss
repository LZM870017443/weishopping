/* pages/inde/index.wxss */

.swiper {
    width: 750rpx;
    height: 375rpx;
}

.swiperitem {}

.swiperimg {
    width: 120%;
}

.index_cate {
    display: flex;
}

.index_cate navigator {
    flex: 1;
    padding: 30rpx;
}

.index_cate navigator image {
    width: 100%;
}

.floot {}

.floot_group {}

.floot_title {}

.floot_title image {
    width: 100%;
}

.foolt_list {
    overflow: hidden;
}

.foolt_list navigator {
    float: left;
    width: 33.33%;
}

.foolt_list navigator:nth-last-child(-n+4) {
    height: calc(33.33vw * 386 / 232 / 2);
    border-left: 10rpx solid white;
}

.foolt_list navigator:nth-last-child(3),
.foolt_list navigator:nth-last-child(4) {
    border-bottom: 10rpx solid #fff;
}

.foolt_list navigator image {
    width: 100%;
    height: 100%;
}